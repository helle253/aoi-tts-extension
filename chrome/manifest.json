{
  "manifest_version": 3,
  "name": "Reader",
  "version": "0.1",
  "description": "Reads highlighted text back to you.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon128.png",
    "default_popup": "pages/index.html"
  },
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "host_permissions": [
    "http://localhost/*",
    "https://hellbhoy.net/*"
  ],
  "permissions": [
    "contextMenus",
    "cookies",
    "offscreen"
  ]
}
